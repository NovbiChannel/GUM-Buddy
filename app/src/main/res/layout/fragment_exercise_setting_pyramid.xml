    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/gradient_for_background_4x"
    tools:context=".ui.fragments.workout.addNewTraining.ExerciseSettingPyramidFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/jura_bold"
                android:textColor="#60AB06"
                android:text="Количество подходов"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_min" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/jura_bold"
                    android:textColor="#60AB06"
                    tools:text="4"
                    android:text="10"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_plus" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/jura_bold"
                android:textColor="#60AB06"
                android:text="Количество повторений"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="3dp"
                    android:textColor="#60AB06"
                    android:layout_weight="1"
                    android:textColorHint="@color/text_color"
                    android:fontFamily="@font/jura_regular"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="0"
                    android:background="@drawable/edittext_background_color"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="3dp"
