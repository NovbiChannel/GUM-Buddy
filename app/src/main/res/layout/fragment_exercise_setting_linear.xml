<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ui.fragments.workout.addNewTraining.ExerciseSettingLinearFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:text="Подходы"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:inputType="number"
                android:hint="0"
                android:background="@drawable/edittext_background_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:text="Повторений"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:inputType="number"
                android:hint="0"
                android:background="@drawable/edittext_background_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="При необходимости укажите вес" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:inputType="number"
                android:hint="Вес"
                android:textStyle="bold"
                android:background="@drawable/edittext_background_color"
                android:layout_weight="1"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:text="кг" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:text=" % от макс. веса" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:text="Комментарий" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:inputType="text"
            android:hint="Комментарий (необязательно)"
            android:textStyle="bold"
            android:background="@drawable/edittext_background_color"/>
    </LinearLayout>
</LinearLayout>